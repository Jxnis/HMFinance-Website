    #contactus
      #whitetograyseparator
        h1 #{translations[locale].SectionsTitles.ContactUs}
      .pcontainer
        img.pimage(src='https://res.cloudinary.com/hmfinance/image/upload/v1581700717/Site/background/3_mfe5ys_fvbpvf.jpg', data-speed='-1')
        .contactusgrid
          .contactusgrid1
            h3 #{translations[locale].ContactUs.Email}
            p #{data.contactUs[0].email}
            br
            br
            h3 #{translations[locale].ContactUs.Phone}
            p #{data.contactUs[0].phone}
            br
            br
            h3 #{translations[locale].ContactUs.Address}
            p #{data.contactUs[0].address1}
            p #{data.contactUs[0].address2}
            br
            br
            iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3111.3393594753975!2d-9.229967885011321!3d38.75591977959266!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd1ecd05db2f959d%3A0x16d90a25b997894d!2sHM+Finance!5e0!3m2!1spt-PT!2spt!4v1488308784739', allowfullscreen='', width='400px', height='290px', frameborder='0')
          .contactusgrid2
            form.contactusMessage(action="/sendmessage", method="post")
              
              label.contactUs #{translations[locale].ContactUs.FormName}
              input(type='text', name='name', onfocus="this.value=''", value=`${translations[locale].Others.ContactUsForm.Name}`)
              br
              label.contactUs #{translations[locale].ContactUs.FormEmail}
              input(type='text', name='email', onfocus="this.value=''", value=`${translations[locale].Others.ContactUsForm.Email}`)
              br
              label.contactUs #{translations[locale].ContactUs.FormMessage}
              textarea#question(name='question', rows='10') #{translations[locale].Others.ContactUsForm.Help}

              input(type='submit', value=`${translations[locale].Others.Button}`)
