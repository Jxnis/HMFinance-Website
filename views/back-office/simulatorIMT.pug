extends layout

block content
    h1 Simulador IMT
    div
        a(href='/dashboard/simulators') Simuladores
    
    table
        tbody
            tr
                th 
                    h3 Tipo de Imóvel  
                th 
                    h3 Localização
                th 
                    h3 Valor do Imóvel Mínimo
                th 
                    h3 Valor do Imóvel Máximo
                th 
                    h3 Taxa Marginal
                th 
                    h3 Parcela a Abater

        form(action=`/dashboard/simulators/imt/edit`, method="post")
            each entry in imtsimulator
                tr
                    td
                        input(type="text", name="type", value=entry.type)
                    td
                        input(type="text", name="location", value=entry.location)      
                    td
                        input(type="text", name="lowEnd", value=(entry.lowEnd == 0 ? entry.lowEnd = 'Campo Bloqueado' : entry.lowEnd), readonly=(entry.lowEnd == 0))       
                    td
                        input(type="text", name="highEnd", value=(entry.highEnd == 0 ? entry.highEnd = 'Campo Bloqueado' : entry.highEnd), readonly=(entry.highEnd == 0))       
                    td
                        input(type="text", name="marginal", value=entry.marginal) 
                    td
                        input(type="text", name="benefitTaxRate", value=entry.benefitTaxRate) 
                    td
                        input(type="hidden", name="id", value=entry.id)   
            div
                input(type="submit", value="Edit")

        
        tbody
            tr
                th 
                    h3 Taxa de Imposto de selo
        form(action=`/dashboard/simulators/imt/editIS`, method="post")
            tr
                td
                    input(type="text", name="type" value=IStax[0].value)
                td
                    input(type="submit", value="Edit")

    