extends layout

block content
    

    h1 Clients 
    div
        a(href="/dashboard") Dashboard
    

    table
        tbody
            tr
                th 
                    h3 Name
                th 
                    h3 Logo URL
                th
                    h3 Client URL
                th  
                    h3 Showing
                
        each client in clients
            tr
                td #{client.name}
                td #{client.logoURL} 
                td #{client.clientURL}
                td
                    form(action=`/dashboard/clients/${client.id}/toggle` method="post")
                        input(
                        type="submit" 
                        value=`${client.isShowing ?
                            "Showing" : "Not Showing"}`
                        )
                td
                    form(action=`/dashboard/clients/${client.id}/edit` method="get")
                            input(
                            type="submit" 
                            value="Edit")                 
                td
                    form(action=`/dashboard/clients/${client.id}/delete` method="post")
                        input(
                        value=client.id 
                        type="hidden" 
                        name="id"
                        )
                        input(
                        type="submit"
                        value="Delete"
                        )
    div
        a(href="/dashboard/clients/new") Add Client
                        