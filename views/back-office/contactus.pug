extends layout

block content
    section.page-content
        section.title-and-user
            h1 Contact Us
            
            .admin-profile
                span.greeting Hi, #{user.email}
                .notifications
                    span.badge 1
                    svg
                        use(xlink:href='#users')

            div
                a(href="/dashboard") Dashboard
        
        section.homepage
            div.homepage-main-content
                h2 Information
                p Here you have the contact information that is on the website:
                form(action="/dashboard/contactus", method="post")
                    div.panel-wrapper    
                        div.panel-head
                            h4 Address 1
                        input.panel-body(type="text", name="address1" value=contactInfo.address1)
                    div.panel-wrapper    
                        div.panel-head
                            h4 Address 2
                        input.panel-body(type="text", name="address2" value=contactInfo.address2)      
                    div.panel-wrapper    
                        div.panel-head
                            h4 E-mail
                        input.panel-body(type="email", name="email" value=contactInfo.email)
                    div.panel-wrapper    
                        div.panel-head
                            h4 Phone Number
                        input.panel-body(type="number", name="phone" value=contactInfo.phone)
                    div.panel-wrapper    
                        div.panel-head
                            h4 Location URL
                        input.panel-body(type="url", name="locationURL" value=contactInfo.locationURL)
                      
                        div
                            input(type="hidden", name="id" value=contactInfo.id)

                    div.button
                        input(type="submit", value="Save")


                    

                